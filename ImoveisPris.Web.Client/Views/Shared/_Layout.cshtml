<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pris-Imóveis </title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <script type="text/javascript">
        $(document).ready(function () {
           // $("#divCarregando").show();
           // $(window).bind('load', function () {
           //     $('#divCarregando').fadeOut("slow");
           // });

            $("form").submit(function (event) {
                $("#divCarregando").show();
            });

            $('.numericOnly').on({
                keydown: function (event) {
                    if (event.keyCode == 13 || event.keyCode == 9 || event.keyCode == 8) {
                        // let it happen, don't do anything
                    }
                    else {
                        // Ensure that it is a number and stop the keypress
                        if (!((event.keyCode >= 96 || event.keyCode <= 105) || (event.keyCode >= 48 || event.keyCode <= 57))) {
                            event.preventDefault();
                        }
                    }
                }
            });

            $('.currencyOnly').on({
                keydown: function (event) {
                    if (event.keyCode == 13 || event.keyCode == 9 || event.keyCode == 8 || event.keyCode == 110 || event.keyCode == 108 || event.keyCode == 190 || event.keyCode == 188) {
                        // let it happen, don't do anything
                    }
                    else {
                        // Ensure that it is a number and stop the keypress
                        if (!((event.keyCode >= 96 || event.keyCode <= 105) || (event.keyCode >= 48 || event.keyCode <= 57))) {
                            event.preventDefault();
                        }
                    }
                }
            });


        });


        $(document).ajaxStop(function () {
            $("#divCarregando").hide();
        });

        $(document).ajaxStart(function () {
            $("#divCarregando").show();
        });

    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pris-Imóveis</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-2">
                <div class="container">
                    <div class="list-group">
                        <a class="nav-link text-dark" asp-area="" asp-controller="TipoDeImovel" asp-action="Index">Tipo de Imóvel</a>
                    </div>
                    <div class="list-group">
                        <a class="nav-link text-dark" asp-area="" asp-controller="TipoDeDisponibilidade" asp-action="Index">Tipo de Disponibilidade</a>
                    </div>
                    <div class="list-group">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Imovel" asp-action="Index">Imovéis</a>
                    </div>
                    <div class="list-group">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Index">Consultar Imoveis</a>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-10">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">  &copy; 2021 - Pris Software </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
<div id="divCarregando" class="progress">
    <img src="~/images/Wait.gif" />
</div>
